---
import background from '../assets/background.png';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>MC Fiber Arts</title>
	</head>
	<body>
		<img id="background" src={background.src} alt="" fetchpriority="high" />
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: 
			blur(50px)
			brightness(200%)
			saturate(75%);
		
	}

</style>
